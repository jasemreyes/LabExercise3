<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jazzzzum.labexercise3.NextActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filename"
        android:height="50dp"
        android:layout_alignTop="@+id/etMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:id="@+id/tvFileName" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFileName"
        android:layout_toEndOf="@+id/tvFileName"
        android:layout_toRightOf="@+id/tvFileName"
        android:height="50dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etFileName"
        android:width="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnSharedPreferences"
        android:layout_alignEnd="@+id/btnSharedPreferences" />
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Shared Preferences"
        android:onClick="loadSharedPreference"
        android:id="@+id/btnSharedPreferences"
        android:layout_below="@+id/tvFileName"
        android:layout_alignLeft="@+id/btnInternalStorage"
        android:layout_alignStart="@+id/btnInternalStorage"
        android:layout_marginTop="32dp" />
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Internal Storage"
        android:onClick="displayMessage"
        android:id="@+id/btnInternalStorage"
        android:layout_below="@+id/btnSharedPreferences"
        android:layout_alignLeft="@+id/btnInternalC"
        android:layout_alignStart="@+id/btnInternalC" />
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Internal Cache"
        android:onClick="loadInternalCache"
        android:id="@+id/btnInternalC"
        android:layout_below="@+id/btnInternalStorage"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="External Cache"
        android:onClick="loadExternalCache"
        android:id="@+id/btnExternalC"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnInternalC"
        android:layout_alignStart="@+id/btnInternalC" />
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Externnal Storage"
        android:onClick="loadExternalStorage"
        android:id="@+id/btnExternalS"
        android:layout_below="@+id/btnExternalC"
        android:layout_alignLeft="@+id/btnExternalC"
        android:layout_alignStart="@+id/btnExternalC" />
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="External Public"
        android:onClick="loadExternalPublicStorage"
        android:id="@+id/btnExternalP"
        android:layout_below="@+id/btnExternalS"
        android:layout_alignLeft="@+id/btnExternalS"
        android:layout_alignStart="@+id/btnExternalS" />
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Previous"
        android:onClick="back"
        android:id="@+id/btnNext"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnExternalP"
        android:layout_alignStart="@+id/btnExternalP"
        android:layout_marginBottom="32dp" />


</RelativeLayout>